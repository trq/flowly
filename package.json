{
  "name": "flowly",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "web",
    "api",
    "packages/*"
  ],
  "scripts": {
    "dev": "bunx agent-tail-core run --log-dir ./var/logs 'web: bun run --filter @flowly/web dev' 'api: bun run --if-present --filter @flowly/api dev'",
    "dev:web": "bun run --filter @flowly/web dev",
    "dev:api": "bun run --if-present --filter @flowly/api dev",
    "dev:all": "bun run --workspaces --if-present dev",
    "build": "bun run --workspaces --if-present build",
    "build:web": "bun run --filter @flowly/web build",
    "build:api": "bun run --if-present --filter @flowly/api build",
    "preview:web": "bun run --filter @flowly/web preview",
    "test": "bun run --workspaces --if-present test"
  },
  "devDependencies": {
    "agent-tail": "^0.3.5",
    "agent-tail-core": "^0.3.5",
    "vite-plugin-agent-tail": "^0.3.5"
  }
}
